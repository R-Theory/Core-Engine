# Core Engine MVP Environment Configuration

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/core_engine
POSTGRES_DB=core_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# File Storage Configuration
UPLOAD_DIR=/app/storage
MAX_FILE_SIZE=104857600  # 100MB in bytes

# External API Keys - AI Agents
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
METAGPT_API_KEY=your-metagpt-api-key-here

# External OAuth - Canvas LMS
CANVAS_CLIENT_ID=your-canvas-client-id
CANVAS_CLIENT_SECRET=your-canvas-client-secret
CANVAS_REDIRECT_URI=http://localhost:8000/api/v1/plugins/canvas/oauth/callback

# External OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/plugins/github/oauth/callback

# External OAuth - Google Drive
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/plugins/google/oauth/callback

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=false

# Frontend Configuration (for docker-compose)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key
NODE_ENV=development

# Plugin Development
PLUGIN_DEV_MODE=true
PLUGIN_RELOAD_ON_CHANGE=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# AWS S3 Configuration (Optional - for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=core-engine-files
AWS_S3_REGION=us-east-1
AWS_S3_ENDPOINT_URL=  # Leave empty for AWS, set for MinIO/other S3-compatible

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=core-engine-backups
BACKUP_RETENTION_DAYS=30

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
REDIS_MAX_CONNECTIONS=20

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=false

# Testing Configuration
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/core_engine_test
TEST_REDIS_URL=redis://localhost:6379/15